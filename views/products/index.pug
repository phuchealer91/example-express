extends ../layouts/common
block content
  h1 
    span.mr-3 Products
    .d-flex.align-items-center
     form.ml-auto(action="/products/search", method="GET", class="d-flex")
        input(type="text", name="q", value=keyWord, class="form-control")
        button(class="btn btn-primary ml-2") Search
  nav(aria-label='age navigation example')
    ul.pagination.d-flex.justify-content-center.align-items-center.mb-5
        li.page-item
         a.page-link(href=`?page=${page - 1}`, tabindex='-1', aria-disabled='true') Previous
        li.page-item
         a.page-link(href=`?page= ${page - 1}`)= page - 1
        li.page-item.active(aria-current='page')
         a.page-link(href=`?page=${page}`)= page
            span.sr-only(current)
        li.page-item
         a.page-link(href=`?page=${page + 1}`)= page + 1
        li.page-item
         a.page-link(href=`?page=${page + 1}`) Next
  .container-custom
    .row
      each product in products
        .col-sm-6.col-md-4.col-lg-3
          .card.mb-3
            img.card-img-top(src=product.image)
            .card-body
                h5.card-title= product.name
                p.card-text= product.detail
                a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
          
